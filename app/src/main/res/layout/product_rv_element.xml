<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_element_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/rv_element_padding"
    android:background="@drawable/rv_element_background"
    android:layout_margin="@dimen/rv_element_padding">

    <TextView
        android:id="@+id/tv_for_product_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rv_element_tv_height_secondary"
        android:textAppearance="@style/TextRVSecondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_for_product_name"
        />


    <TextView
        android:id="@+id/tv_for_product_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rv_element_tv_height"
        android:textAppearance="@style/TextRVPrimary"
        app:layout_constraintTop_toBottomOf="@+id/tv_for_product_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>