<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/rv_element_padding"
    android:background="@drawable/rv_element_background">

    <ImageView
        android:id="@+id/iv_for_product_image"
        android:layout_width="@dimen/rv_image_width"
        android:layout_height="@dimen/rv_image_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_for_product_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/rv_element_padding"
        android:paddingStart="@dimen/rv_element_padding"
        android:textAppearance="@style/TextPrimary"
        android:maxLines="2"
        app:layout_constraintBottom_toTopOf="@+id/tv_for_product_id"
        app:layout_constraintStart_toEndOf="@+id/iv_for_product_image"
        app:layout_constraintTop_toTopOf="@+id/iv_for_product_image"
        />

    <TextView
        android:id="@+id/tv_for_product_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/rv_element_height"
        android:paddingEnd="@dimen/rv_element_padding"
        android:paddingStart="@dimen/rv_element_padding"
        android:textAppearance="@style/TextSecondary"
        app:layout_constraintTop_toBottomOf="@+id/tv_for_product_name"
        app:layout_constraintStart_toEndOf="@+id/iv_for_product_image"
        app:layout_constraintBottom_toBottomOf="@+id/iv_for_product_image"
        />

    <View
        android:id="@+id/activity_launch_details_top_container_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/rv_bottom_border_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_for_product_image" />

</androidx.constraintlayout.widget.ConstraintLayout>