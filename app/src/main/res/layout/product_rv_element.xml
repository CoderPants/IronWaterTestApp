<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <TextView
        android:id="@+id/tv_for_product_id"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="Test id"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="@style/TextSecondary"
        app:layout_constraintBottom_toTopOf="@+id/tv_for_product_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_for_product_name"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Test name"
        android:textAppearance="@style/TextPrimary"
        app:layout_constraintTop_toBottomOf="@+id/tv_for_product_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>